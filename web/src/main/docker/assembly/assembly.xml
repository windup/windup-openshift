<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <baseDirectory></baseDirectory>

    <!-- Add distribution files -->
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/tools/</directory>
            <outputDirectory>opt/tools</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/sso/</directory>
            <outputDirectory>${jboss.home}/standalone/configuration/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/root-redirect</directory>
            <outputDirectory>${jboss.home}/root-redirect/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/scripts</directory>
            <outputDirectory>${jboss.home}/bin/</outputDirectory>
            <fileMode>0777</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/cli</directory>
            <outputDirectory>${jboss.home}/standalone/configuration</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/wars</directory>
            <outputDirectory>deployments</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/driver</directory>
            <outputDirectory>${jboss.home}/driver</outputDirectory>
            <fileMode>0777</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/extensions</directory>
            <outputDirectory>${jboss.home}/extensions</outputDirectory>
            <fileMode>0777</fileMode>
        </fileSet>
    </fileSets>
</assembly>
